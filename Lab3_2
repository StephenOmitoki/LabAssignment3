#include <iostream>
using namespace std;

int main()
{
    double x,y;
    
    cout << "Enter value for x : " << endl;
    cin >> x ;
    
    cout << "Enter value for y: " << endl;
    cin >> y;
    
    
    double* ptr_x = &x;
    double* ptr_y = &y;
    
    double sum = *ptr_x + *ptr_y;
    
    cout << "x = " << x << endl;
    cout << "y = " << y << endl;
    
    cout << "Sum of x and y = " << sum << endl;
    
    
    


    return 0;
}